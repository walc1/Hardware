<Reader>
	<!-- 0 = Request, 1 = Auto, 2 = Redirect -->
	<Mode>1</Mode>
	<PortName>COM2</PortName>
	<Baudrate>9600</Baudrate>
	<Parity>0</Parity>
	<StopBits>1</StopBits>
	<Databits>8</Databits>
	<!-- Wenn nicht angegeben, wird auf "MessageLength" gegenagen, ansonsten hat das Vorrang  -->
	<Termination>13</Termination>
	<MessageLength>25</MessageLength>	
	<!-- Optionales Kommando um den Lesevorgang einzuleiten -->
	<RequestCommand>GimmeData</RequestCommand>
	<!-- Pause zwischen den Request Abfragen (ms) -->
	<RequestPause>250</RequestPause>
</Reader>
